.featured-collection {
    padding: 97px 0 120px;
}
.featured-collection__title a{
    font-family: 'Oswald';
    font-style: normal;
    font-weight: 300;
    font-size: 12px;
    line-height: 168%;
    text-align: center;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    color: #000000;
    margin-top: 8px;
    
}
.hover-arrow {
    margin-left: 9px;
}
.featured-collection__title:hover .hover-arrow path{
    fill: black;
}

.featured-collection .swiper {
  width: 100%;
  height: 100%;
}

.featured-collection .swiper-slide {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-bottom: 40px;
}

