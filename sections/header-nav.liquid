{{ "style.header-nav.css" | asset_url | stylesheet_tag}}

<nav class="header__nav">
  <div class="container">  
    <div class="header__nav__grid">

    <a class="nav__logo" href="#!" aria-label="Learn more"> {% render "icon-logo" %} </a>

    <ul class="nav__list">
      {% for link in linklists.again-faster.links %}
         <li class="list__item"><a class="h4 item__link" href="{{ link.url }}" aria-label="Learn more">{{ link.title }}</a></li>
      {% endfor %}
    </ul>

    <div class="nav__cta">
      <div class="nav__cta__item">
        {% render "icon-search" %}
      </div>
     
      <div class="nav__cta__item">
        <a href="{{ routes.account_url }}" aria-label="Learn more"> {% render "icon-account" %}</a>
       
      </div>
      <div class="nav__cta__item" id="bag">
        {% render "icon-bag" %}
        <span id="bag_counter">0</span>
      </div>
       
        
    </div>
  </div> 

  </div>  
</nav>

 