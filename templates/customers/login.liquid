<!-- /templates/customers/login.liquid -->
<style>
  .login, .recover {
    width: 442px;
    padding: 80px 0 120px;
    margin: 0 auto;
  }
 
  .login h3 {
    margin-bottom: 63px;
    text-align: center;
  }
  .login p {
    text-align: center;
    color: #000000;
    padding: 24px 0 40px;
  }
  .email-wrp, .password-wrp {
    display: flex;
    flex-direction: column;
  }
  .email-wrp {
    margin-bottom: 24px;
  }
  .login label {
     font-family: var(--primary-font-family);
    font-weight: 400;
    font-size: 12px;
    line-height: 167.5%;
    color: #000000;
  }
  .login input {
    border: none;
    padding:8px 0 12px;
    border-bottom: 1px solid #000000;
  }
  .red_border {
    border-bottom: 1px solid #DA0000 !important;

  }
  .forget_password {
    margin-bottom: 40px;
    margin-top: 8px;
    display: block;
    color: #000000;
    text-align: end;
    cursor: pointer;
  }
  .errors  {
    display: none;
  }
  .error_massage {
    margin-bottom: 8px;
    color: #DA0000;
  }

  .recover p {
    margin-bottom: 40px;   
    margin-top: 40px; 
    text-align: center;
  }
  .recover h3 {
    text-align: center;
  }
  .recover input {
    border: none;
    padding:8px 0 12px;
    border-bottom: 1px solid #000000;
  }
  .recover label {
     font-family: var(--primary-font-family);
    font-weight: 400;
    font-size: 12px;
    line-height: 167.5%;
    color: #000000;
  }
  .recover {
    display: none;
  }
</style>

<div class="login">
  <h3>Login</h3>
  {% form 'customer_login', return_to: routes.all_products_collection_url %}
  
  {{ form.errors | default_errors }}
    <div class="email-wrp">
      <label for="customer_email">Email</label>
      <input type="email" name="customer[email]" placeholder="andy@avexdesigns.com"
      {% if    form.errors | default_errors  %} class="red_border" {% endif %} 
      />
    </div>

    <div class="password-wrp">
      <label for="customer_password">Password</label>
      <input type="password" name="customer[password]"
      {% if    form.errors | default_errors  %} class="red_border" {% endif %}   
      />
    </div>
    <p class="forget_password" >Forgot password?</p>

    {% if    form.errors | default_errors  %}
        <span class="p2 error_massage">Wrong email or password, please retry with correct information</span>
    {% endif %} 

    {% render "submit-btn", text: "log in" %}
  
  {% endform %}

  <p>Donâ€™t have an account yet?</p>
  
  {% render "redirect-btn", text: "Create an account", link: routes.account_register_url %}
</div>

<!-- recover_customer_password -->

<div class="recover">
  <h3>Reset Password</h3>
  <p>Enter your email below to receive an email to reset your password.</p>

  {% form 'recover_customer_password' %}
  {{ form.errors | default_errors }}

  <div class="email-wrp">
    <label for="email">Email</label>
    <input type="email" name="email">
  </div>

  {% render "submit-btn", text: "Reset Password" %}

{% endform %}
</div>



<script>
  
let forget_password = document.querySelector(".forget_password")
let login = document.querySelector(".login")
let recover = document.querySelector(".recover")
forget_password.addEventListener("click", (e)=> {
  login.style.display = "none"
  recover.style.display = "block"
})

</script>